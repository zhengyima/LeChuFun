.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.mycontainer{
  padding:0 0;
  background-color: #ffffff;
  height:1300rpx;
}
.my-scroll{
  height:100%;
  width:100%;
}
.room-img-view{
  height:40%;
  width:100%;
}
.room-image{
  width:100%;
  height:100%;
}
.info-view{
  background-color:#222222;
  color:white;
  font-size:40rpx;
  height:13%;
  position:absolute;
  opacity: 0.5;
  width:100%;
  top:24%;
  font-weight:400;
  padding-top:35rpx;
  padding-left:40rpx;
  display:flex;
}
.info-name-view{
  height:100%;
  width:30%;
}
.info-date-view{
  height:100%;
  width:40%;
  padding-right:5%;
}
.info-time-view{
  height:100%;
  width:20%;
}
.info-title{
  font-size:30rpx
}
info-detail{
  font-size:35rpx;
}

.addr-view{
  margin-top:15rpx;
}
.time-select-view{
  padding-top:30rpx;
}
.time-title{
  font-weight:400;
  font-size:30rpx;
  margin-left:30rpx;
}
.time-select{
  width:96%;
  margin-left:2%;
  padding-top:25rpx;
  padding-bottom:10rpx;
  border-bottom: 1rpx solid #9f9999
}
.time-select-half{
  width:94%;
  margin-left:4%;
  margin-right:4%;
  padding-top:25rpx;
  padding-bottom:10rpx;
  border-bottom: 1rpx solid #9f9999
}

.price-detail{
  width:96%;
  margin-left:2%;
  padding-top:25rpx;
  padding-bottom:10rpx;
  border-bottom: 1rpx solid #9f9999
}

.price-detail-item{
  width:100%;
  display:flex;
  font-weight:400;
  font-size:25rpx;
  margin-bottom:20rpx;
}

.item-name{
  padding-left:2%;
  width:80%;
}
.item-price{
  width:20%;
}
.total-view{
  width:100%;
  padding-left:4%;
  display:flex;
}
.total-text{
  font-weight:400;
  font-size:30rpx;
  width:75%;
}
.total-price{
  font-weight:400;
  font-size:30rpx;
  width:25%;
}
.total-text-tiny{
  font-weight:300;
  font-size:27rpx;
  width:75%;
}
.total-price-tiny{
  font-weight:300;
  font-size:27rpx;
  width:25%;
}
.time-picker{
  display:flex;
}
.picker-inner-view{
  display:flex;
  width:750rpx;
}
.left-img-view{
  width:75rpx;
}
.picker{
  font-weight:300;
  font-size:26rpx;
  margin-left:60rpx;
  padding-top:15rpx;
  width:500rpx;
}
.picker-icon{
  width:65rpx;
  height:65rpx;
  padding-left:10rpx;
  padding-right:10rpx;
}
.picker-icon-tiny{
  width:30rpx;
  height:20rpx;
  margin-top:20rpx;
}
.two-select-view{
  width:100%;
  padding-top:30rpx;
  display:flex;
}

.half-select-view{
  width:50%;
}
.half-picker{
  font-weight:300;
  font-size:26rpx;
  margin-left:30rpx;
  padding-top:15rpx;
  width:200rpx;
}
.tip-view{
  width:100%;
  padding-left:40rpx;
}
.tip{
  font-weight:300;
  font-size:22rpx;
}

.busy-time-view{
  margin-top:20rpx;
  width:100%;
  display:flex;
}
.busy-title{
  font-weight:400;
  font-size:30rpx;
  margin-left:30rpx;
  padding-top:5rpx;
}
.busy-time-detail{
  display:flex;
  padding-left:25rpx;
}
.busy-time{
  margin-top:20rpx;
  margin-left:30rpx;
}
.busy-time-text{
