    <view class="foot-view"></view>
  </scroll-view>
  <button class="bottom-bar" open-type="contact" session-from="lechufun">
    询
  </button>
  <view class="bottom-bar-go">
    <view class="view-btn-2">
      <button class="yueta" data-sno="{{list.sno}}" bindtap="order_func">提交</button>
    </view>
  </view>
</view>
