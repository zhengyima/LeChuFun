/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.mycontainer{
  padding:0 0;
  background-color: #ffffff;
  height:1300rpx;
}
.my-scroll{
  height:100%;
}
.room-view{
  height:55%;
  width:96%;
  margin-left:2%;
  margin-right:2%;
}
.myswiper{
  height:78%;
  width:100%;
}

.room-image{
  width: 100%; 
  height: 100%;
  margin-bottom: 0;
  padding-bottom:0; 
}
.info-view{
  display:flex;
  height:22%;
  padding-left:15rpx;
}
.text-view{
  width:70%;
  height:100%;
}
.price-view{
  width:30%;
  height:100%;
}
.name-view{
  height:30%;
  width:100%;
  justify-content: center;
  padding-top:20rpx;
  
}
.name-text{
  font-weight:300;
  color:#93774f;
  font-size:20px;
}
.label-view{
  height:70%;
  width:100%;
  display:flex;
  padding-top:20rpx;
}
.label{
  padding:5rpx 5rpx;
  margin-right:5%;
  border-style: solid; 
  border-width: 1px;
  border-color: #9f9999;
  border-radius: 15%;
  height:30rpx;
  display: flex;
  justify-content: center;
}
.label-text{
  font-weight:300;
  color:#93774f;
  font-size:25rpx;
}
.price-num-view{
  height:40%;
  display:flex;
  padding-top:15rpx;
}
.notice-view{
  height:30%;
  background-color: #957953;
  color:#ffffff;
  border-style: solid; 
  border-width: 1px;
  border-radius: 14%;
  font-weight:300;
  font-size:25rpx;
  width:90%;
  justify-content: center;
  display:flex;
}
.num-view{
  width:65%;
  font-weight:400;
  font-size:45rpx;
  color:#93774f;
}
.per-hour-view{
  padding-top:20rpx;
  width:35%;
  font-weight:300;
  font-size:20rpx;
  color:#93774f;
}
.foot-view{
  height:150rpx;
}
.bottom-bar{
  position:fixed;
  top:85%;
  left:78%;
  width:65px;
  height:60px;
  display:flex;
  background-color:#b69a72;
  border-radius: 100%;
  justify-content: center;
  color:white;
  font-size:33px;
  font-weight:300;
  padding-top:18rpx;
}
